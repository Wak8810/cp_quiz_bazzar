<div class="p-3">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title mt-3">解答履歴</h5>
            <div class="my-5">
                <% @solved_quizzes.each do |solved_quiz| %>
                    <ul class="list-group">
                        <li class="list-group-item mb-3 d-flex gap-3">
                            <div>
                                <%= solved_quiz.quiz.title %>
                            </div>
                            <div>
                                <%= solved_quiz.created_at.strftime('%Y年%m月%d日 %H:%M') %>
                            </div>
                            <div>
                            <% if solved_quiz.quiz_option.correct %>
                                正解
                            <% else %>
                                不正解
                            <% end %>
                        </div>
                        </li>
                    </ul>
                <% end %>
            </div>
        </div>
    </div>
</div>
