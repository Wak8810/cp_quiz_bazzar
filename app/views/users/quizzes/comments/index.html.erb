<div class="p-3">
  <div class="card border-gray-background" style="width: 90%; margin: 0 auto;">
    <div class="card-body">
      <div class="mt-3 mb-5" style="width: 90%; margin: 0 auto;">
        <%= link_to user_quizzes_path(current_user), class: "large-white-text" do %>
          <i class="fa-solid fa-arrow-left"></i> クイズ一覧
        <% end %>
      </div>
      <h5 class="card-title mb-5 fw-bold fs-2 text-white" style="text-align: left; width: 90%; margin: 0 auto;">コメント一覧</h5>
      <h6 class="card-title mt-3 fw-bold fs-2 text-white" style="text-align: left; width: 90%; margin: 0 auto;"> <%= @quiz.title %></h6>
      <div class="my-4" style="text-align: left; width: 90%; margin: 0 auto;">
        <% @quiz.comments.each do |comment| %>
          <ul class="list-group">
            <li class="list-group-item mb-3 border-4 border-dark">
              <%= comment.content %>
              <div class="mt-2">
                <strong>投稿者:</strong> <%= comment.user.name %>
            </div>
            <div class="mt-2">
              <strong>投稿日:</strong> <%= comment.created_at.strftime('%y年%m月%d日 %h:%m') %>
          </div>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
    <% if @quiz.comments.any? == false %>
      <div class="alert alert-info">
        コメントがありません
      </div>
    <% end %>
  </div>
</div>
