<div class="p-3">
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    <h3 class="fw-bold fs-4 text-secondary mb-2">クイズ詳細</h3>
                    <h4 class="fw-bold fs-2 text-dark"><%= @quiz.title %></h4>
                </div>
                <div class="d-flex gap-2">
                    <%= link_to "編集", edit_user_quiz_path(current_user, @quiz), class: 'btn btn-sm btn-outline-primary' %>
                    <%= button_to "削除", user_quiz_path(current_user, @quiz), method: :delete, form: { class: 'd-inline' }, data: { turbo_confirm: "削除してよろしいですか？" }, class: 'btn btn-sm btn-outline-danger' %>
                </div>
            </div>
            <div class="card bg-light mb-3">
                <div class="card-body">
                    <h5 class="card-title fw-bold">問題</h5>
                    <p class="card-text"><%= @quiz.content %></p>
                </div>
            </div>
            <div class="card bg-light mb-4">
                <div class="card-body">
                    <h5 class="card-title fw-bold">解説</h5>
                    <p class="card-text"><%= @quiz.explanation %></p>
                </div>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="fw-bold fs-5 text-dark m-0">選択肢一覧</h5>
                <%= link_to "選択肢追加", new_user_quiz_quiz_option_path(current_user, @quiz), 
                      class: 'btn btn-outline-success mt-3' %>
            </div>
            <div class="mb-4">
                    <% @quiz_options.each do |option| %>
                        <div class="card border-0 shadow-sm mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div class="d-flex align-items-center gap-2">
                                        <% if option.correct %>
                                            <span class="badge bg-success px-2">正解</span>
                                        <% else %>
                                            <span class="badge bg-danger px-2">不正解</span>
                                        <% end %>
                                        <p class="m-0"><%= option.content %></p>
                                    </div>
                                    <div class="btn-group btn-group-sm" role="group" aria-label="選択肢の操作">
                                        <%= link_to edit_user_quiz_quiz_option_path(current_user, @quiz, option), 
                                            class: 'btn btn-outline-primary',
                                            title: '選択肢を編集する',
                                            aria: { label: '選択肢を編集する' } do %>
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        <% end %>
                                        <%= button_to user_quiz_quiz_option_path(current_user, @quiz, option), 
                                            method: :delete, 
                                            form: { class: 'd-inline' },
                                            data: { turbo_confirm: "削除してよろしいですか？" },
                                            class: 'btn btn-outline-danger',
                                            title: '選択肢を削除する',
                                            aria: { label: '選択肢を削除する' } do %>
                                            <i class="fa-solid fa-trash"></i>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% end %>
                <% if @quiz_options.any? == false %>
                    <div class="alert alert-info">
                        選択肢がありません
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
