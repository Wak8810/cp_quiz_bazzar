<div class="p-3">
    <div class="card">
        <div class="card-body">
          <h5 class="card-title mt-3">コメント</h5>
          <h6 class="card-title mt-3"> <%= @quiz.title %> </h6>
            <div class="my-5">
                <% @quiz.comments.each do |comment| %>
                    <ul class="list-group">
                      <li class="list-group-item mb-3">
                          <%= comment.content %>
                      </li>
                    </ul>
                <% end %>
            </div>
        </div>
    </div>
</div>

<%= link_to 'コメントを投稿', new_quiz_comment_path(@quiz), class: 'btn btn-primary' %>
