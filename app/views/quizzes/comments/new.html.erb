<div class="p-3">
  <div class="d-flex justify-content-center align-items-center">
    <div class="col-md-4">
      <div class="col">
        <div class="card px-3 card-base-color mx-auto">
          <div class="card-body">
            <h5 class="card-title d-flex justify-content-center"><%= @quiz.title %></h5>
            <div class="d-flex justify-content-end">
              <div>
                <div class="d-flex align-items-center">
                  <div class="icon-padding">
                    <i class="fa-solid fa-heart heart-icon-color"></i>
                  </div>
                  <div>
                    <%= @quiz.likes.count %>
                  </div>
                </div>
                <div class="d-flex align-items-center">
                  <div class="icon-padding">
                    <i class="fa-regular fa-comment-dots comment-dot-icon-color"></i>
                  </div>
                  <div>
                    <%= @quiz.comments.count %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= form_with(model: [@quiz, @comment]) do |f| %>
    <div class="form-group">
      <%= f.label :content, "コメント内容" %>
      <%= f.text_area :content, class: "form-control" %>
    </div>

    <%= f.submit "コメントを投稿", class: "btn btn-primary float-end mt-3" %>
  <% end %>
</div>
