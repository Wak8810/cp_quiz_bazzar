<header>
  <div class="header">
    <%= link_to 'BUZZAR', root_path, class: 'logo' %>
    <nav>
      <% if current_user %>
        <%= link_to 'クイズを投稿', new_user_quiz_path(current_user), class: 'nav-link' %>
		<%= link_to 'ユーザー情報', user_path(current_user), class: 'nav-link' %>
        <%= link_to '作成済みクイズを閲覧', user_quizzes_path(current_user), class: 'nav-link' %>
        <%= link_to '回答履歴', user_solved_quizzes_path(current_user), class: 'nav-link' %>
        <%= button_to 'ログアウト', logout_path, class: 'btn nav-link', method: :delete %>
      <% end %>
      <% if !current_user %>
        <%= link_to 'ログイン', login_path, class: 'nav-link' %>
        <%= link_to '登録', signup_path, class: 'nav-link' %>
      <% end %>
    </nav>
  </div>
</header>
